<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here.
         Light.DarkActionBar
         -->
        <item name="colorPrimary">@color/darkThemeColor2</item>
        <item name="colorPrimaryDark">@color/darkThemeColor2</item>
        <item name="colorAccent">@color/darkThemeColor</item>
        <item name="android:navigationBarColor">@color/darkThemeColor</item>
    </style>
    <style name="NavigationBarStyle">
        <item name="android:background">@color/darkThemeColor</item>
        <item name="itemTextColor">@color/white</item>
        <item name="itemIconTint">@color/white</item>
    </style>
    <style name="TabLayoutStyle">
        <item name="tabBackground">@color/darkThemeColorElement</item>
        <item name="tabRippleColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/redColor</item>
        <item name="tabTextColor">@color/gray</item>
    </style>
    <style name="RecyclerViewElement">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ToolBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/darkThemeColor2</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>

    </style>
</resources>